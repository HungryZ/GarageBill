<view class="header">
	<text>单号：20200518010001</text>
	<text>2020/05/18</text>
</view>
<view class="body">
	<view class="paramater">
		<block wx:for="{{paramaters}}" wx:key="paramater">
			<input class="paramaterCell" placeholder="{{item.name}}"></input>
			<!-- 下面三个view是线条 -->
			<view class="vLine" wx:if="{{index % 2 == 0}}"></view>
			<view class="paramaterCell" wx:if="{{index % 2 == 0 && index == paramaters.length - 1}}"></view>
			<view class="hLine" wx:if="{{index % 2 == 1 || index == paramaters.length - 1}}"></view>
		</block>
	</view>
	<view style="height: 64rpx;"></view>
	<view class="hLine"></view>
	<view class="row">
		<view style="width: 65%; text-align: center;">项目</view>
		<view style="width: 32rpx;"></view>
		<view class="vLine"></view>
		<view style="width: 25%; text-align: center;">金额</view>
	</view>
	<view class="hLine"></view>
	<block wx:for="{{items}}" wx:key="items">
		<view class="row">
			<view style="width: 65%; padding-left: 20rpx; box-sizing: border-box;">{{item.name}}</view>
			<view style="display: flex; align-items: center;">
				<view id="{{index}}" class="deleteButton">x</view>
			</view>
			<view class="vLine"></view>
			<view style="width: 25%; text-align: center;">{{item.price}}</view>
		</view>
		<view class="hLine"></view>
	</block>
	<button class="addButton" bindtap='addButtonClicked'>新增一条</button>
	<view class="hLine"></view>
	<view style="height: 200rpx"></view>
	<view class="row">
		<view style="width: 70%; box-sizing: border-box; text-align: right;">合计:</view>
		<view style="width: 30%; text-align: center;">18,088.00</view>
	</view>
</view>
<view slot="button" style="margin-top: 44px">
	<button class="weui-btn" type="primary" bindtap="submitItem">保存</button>
	<button class="weui-btn" type="warn" wx:if="{{type == 1}}" bindtap="deleteItem">删除</button>
</view>